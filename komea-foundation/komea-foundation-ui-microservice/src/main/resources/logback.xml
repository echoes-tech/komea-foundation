<configuration>
	<statusListener class="ch.qos.logback.core.status.NopStatusListener" />
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[%thread][%.-1level] %logger{0} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="com.github.fakemongo" level="INFO"></logger>

	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
